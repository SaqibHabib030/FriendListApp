<%= form_with model: friend do |form| %>
  <div class="form-group">
    <%= form.label :First_Name %><br>
    <%= form.text_field :first_name, class:"form-control" %>
    <% friend.errors.full_messages_for(:first_name).each do |message| %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert"><%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %><br>
  </div>

  <div class="form-group">
    <%= form.label :Last_Name %><br>
    <%= form.text_field :last_name, class:"form-control" %>
    <% friend.errors.full_messages_for(:last_name).each do |message| %>
      <div><%= message %></div>
    <% end %><br>
  </div>

  <div class="form-group">
    <%= form.label :Email %><br>
    <%= form.email_field :email, class:"form-control" %>
    <% friend.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %><br>
  </div>

  <div class="form-group">
    <%= form.label :Phone %><br>
    <%= form.number_field :phone, class:"form-control" %>
    <% friend.errors.full_messages_for(:phone).each do |message| %>
      <div><%= message %></div>
    <% end %><br>
  </div>

   <div class="form-group">
    <%= form.label :Twitter %><br>
    <%= form.text_field :twitter, class:"form-control" %>
    <% friend.errors.full_messages_for(:twitter).each do |message| %>
      <div><%= message %></div>
    <% end %><br>
  </div>
    <%= form.hidden_field :user_id, value:current_user.id %>
  <div>
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
